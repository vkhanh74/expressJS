extends ../layout/layout.pug

block content
	table.table
		thead
			tr
				th(scope='col') Name
				th(scope='col') Telephone
				th(scope='col') Action
		tbody
			each user in users
				tr
					td= user.name
					td= user.phone
					td
						a.btn.btn-success(href='/users/' + user.id) View
	//- ul
	//- 	each user in users
	//- 		li
	//- 			span= user.name
	//- 			a(href='/users/' + user.id) View
	script.
		var value = document.getElementById('get-value')
		var inputValue = document.getElementById('value')
		value.addEventListener('click', function() {
			var input = inputValue.value;
			sessionStorage.setItem("found", input);
		})
		nameInMemory = sessionStorage.getItem("found");
		inputValue.value = nameInMemory