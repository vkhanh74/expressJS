extends ../layout/layout.pug

block content
	h1 Login

	if errors
		each error in errors
			.alert.alert-danger= error 
			//Lấy giá trị lỗi trong mảng error ghi vào class alert


	form(action="" method="POST")
		.form-group
			label(for="email") Email
			input.form-control(type="text" name="email" id="email" value=values ? values.email : "") 
			// Kiểm trả nếu values có giá trị thì trả về value vừa nhập còn không thì trả về rỗng
		.form-group
			label(for="password") Password
			input.form-control(type="password" name="password" id="password" value=values ? values.password : "")
		button.btn.btn-success Login